
<div class="nav-side-right-menu">
  <div class="brand"> Key Metrics </div>
  <p>Number of active tables <%= @active_tables %></p>

  <p>Active orders <%= @active_orders.count %> </p>

  <p>Orders not yet paid <%= @orders_not_yet_paid.count %> </p>


  <% if @dangerous_orders.any? %>
    <button type="button" style="margin-top: 10px" class="btn btn-info" data-placement="bottom" data-toggle="popover" data-trigger="focus" title="" data-content="
    <% @dangerous_orders.each do |order| %>
    Table <%=order.table.table_number %> <%= (order.time + 60.minutes ).strftime("%H:%M")%> 
    <% end %>
    ">Dangerous orders</button>

  <% end %>
</div>

<script>
$(function () {
  $('[data-toggle="popover"]').popover()
})
</script>
