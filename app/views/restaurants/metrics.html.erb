<%= render 'shared/browser-tab-title'  %>

<% Groupdate.time_zone = "Brussels" %>
<div class="container">
  <h3 class="text-center">Statistics: <%= @restaurant.name %> </h3>
  <div class="box">
  <div class="chart">
    <h4 class="text-center"><%= DateTime.now.strftime("%A, %b %d") %></h4>
    <p class="text-center">Number of orders by hour</p>
    <%= column_chart @restaurant.orders.group_by_hour_of_day(:time, format: "%l %P").count %>
  </div>
  <div class="chart">
    <h4 class="text-center">Number of orders by day</h4>
    <%= line_chart @restaurant.orders.group_by_day(:time, week_start: :mon).count %>
  </div>
  <!-- <div class="chart">
    <h4 class="text-center">Number of orders by week</h4>
    <%= line_chart @restaurant.orders.group_by_week(:time, week_start: :mon).count %>
  </div> -->


  <div class="text-center">
    <%= link_to 'Dashboard', restaurant_dashboard_path(@restaurant), class: "btn btn-back" %>
  </div>
  </div>
</div>
