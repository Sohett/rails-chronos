<%= render 'shared/banner'  %>

<%= link_to 'basket_summary', table_basket_summary_path(@table), method: :get, class: "btn btn-info" %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>" style="margin-bottom: 10px"><%= value %></div>
<% end %>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

  <div class="panel panel-default" id="basket">

    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <div class= "text-center">
          <a class= "btn btn-header" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Starters
          </a>
        </div>
      </h4>
    </div>

    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div class="item-box">
          <% @items_starters.each do |item|%>
          <div class="item">
            <div class="item-descritption">
              <li>
                <h3><%= item.name %></h3>
                <p><%= item.description %></p>
                <p id="price-menu"><%= item.price%> €</p>
              </li>
            </div>
            <%= simple_form_for [@table, @orderline] do |f| %>
            <%= f.input :item,  :as => :hidden, :input_html => { :value => item.id } %>
            <%= f.button :button do %>
            <i class="fa fa-plus" style="color: #feb632"></i>
            <% end %>
            <% end  %>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

