<div class="container">
  <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  <h3>Orders only for table <%= @table.table_number %></h3>

  <ul>
    <% @orders_all.each do |order| %>
    <li>
      <p>order number <%= order.number %> | table number<%= order.table.table_number %>  | status : <%= order.status %></p>
    </li>
    <% end %>
  </ul>

  

  <% if @orders_not_paid.any? %>
    <p>Attention, you have <%= @orders_not_paid.count %> orders not yet paid for this table. Put them to 'PAID' before reseting the table</p>
  <% end %>
  <%= link_to 'Dashboard', dashboard_path, class: "btn btn-info" %>

  <% unless @orders_not_paid.any? %>
  <div class="container text-center" style="margin:50px 0">
    <%= link_to 'Clear table', table_clear_path(@table), method: :delete, class: "btn btn-danger", :data => {:confirm => 'This will delete all the orders. Confirm?'} %>
  </div>
  <% end %>

</div>
